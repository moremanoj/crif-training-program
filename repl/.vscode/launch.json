    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug REPL dev MESH server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/srv/repl-dev-mesh.js",
            "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/babel-node",
            "stopOnEntry": false,
            "autoAttachChildProcesses": true,
            "runtimeArgs": [
                            ],
            "args": [
                "--seneca.options.legacy.transport=false"
            ],
            "sourceMaps": true,
            "internalConsoleOptions": "openOnFirstSessionStart",
            "console": "integratedTerminal"
        }
    ]
}
